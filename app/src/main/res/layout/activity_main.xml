<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.solo.solobit.MainActivity"
    android:background="#f6a0fc">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MWESIGYE SOLOMON"
        android:id="@+id/textView"
        android:textSize="20sp"
        android:textIsSelectable="false"
        android:textColor="#1740f7"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/dsp"
        android:layout_alignEnd="@+id/dsp" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:id="@+id/typ"
        android:inputType="none"
        android:background="#fbf9f9"
        android:layout_above="@+id/sub"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/sub"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="165dp"
        android:id="@+id/solo"
        android:src="@drawable/solo"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/typ"
        android:layout_alignStart="@+id/typ" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TYPE 2 SOLO"
        android:id="@+id/textView2"
        android:textSize="25sp"
        android:layout_above="@+id/typ"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/dsp"
        android:textSize="20dp"
        android:layout_above="@+id/textView2"
        android:textColor="#0c0c0c"
        android:layout_below="@+id/solo"
        android:layout_alignRight="@+id/sub"
        android:layout_alignEnd="@+id/sub"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />
</RelativeLayout>
